{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "=0.8.17"],
    "prettier/prettier": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "reason-string": ["warn", {"maxLength": 80}],
    "func-visibility": ["warn", {"ignoreConstructors": true}],
    "var-name-mixedcase": ["warn", {"ignoreImmutable": true}]
  },
  "plugins": ["prettier"]
}
